<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:id="@+id/subLayout1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:nestedScrollingEnabled="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#080e3a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/searchBackButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/sub_back" />

        <TextView
            android:id="@+id/topName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="50dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="normal"
            android:text="Search Children"
            android:layout_marginTop="5dp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/subLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/subLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/searchBeacon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/search_beacon"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onSearchBeaconClicked"/>

        <TextView
            android:id="@+id/textSearchBeacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Beacon"
            android:textSize="18dp"
            android:textColor="#080e3a"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/searchBeacon"
            android:layout_toEndOf="@+id/searchBeacon"
            android:layout_marginLeft="3dp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/subLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/subLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/subSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sub_setting"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onSettingButtonClicked"/>
        <TextView
            android:id="@+id/textSubSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="18dp"
            android:textColor="#080e3a"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/subSetting"
            android:layout_toEndOf="@+id/subSetting"
            android:layout_marginLeft="3dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/subLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/subLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/subExecute"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/sub_execute"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/textSubExecute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Execute"
            android:textSize="18dp"
            android:textColor="#080e3a"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/subExecute"
            android:layout_toEndOf="@+id/subExecute"
            android:layout_marginLeft="7dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Add New Event    "
        android:id="@+id/AddBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:onClick="onAddBtnClicked"/>

</RelativeLayout>
